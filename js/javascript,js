/* Clase 11 */

/* Tarea 1 */

let diaSemana = prompt("¿Qué día es hoy?");
switch (diaSemana) {
case "lunes":

alert("Hoy es lunes. Hay que salir a caminar 20 minutos.");

break;
case "martes":

alert("Hoy es martes. Toca hacer sentadillas.");

break;
case "miércoles":

alert("Hoy es miércoles. Hay que hacer flexiones.");

break;
case "jueves":

alert("Hoy es jueves. Descansamos.");

break;
case "viernes":

alert("Hoy es viernes. Hacer abdominales.");

break;
case "sábado":

alert("Hoy es sábado. Limpieza general del hogar.");

break;
case "domingo":

alert("Hoy es domingo. Dia con la familia.");

break;
default:

alert("Escribe el día de la semana en minúsculas.");
}

